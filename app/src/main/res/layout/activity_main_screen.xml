<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joe.stopwatch.activities.MainScreenActivity">
    <Button
        android:id="@+id/toggleTimer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="117dp"
        android:onClick="StartNewActivity"/>

    <Button
        android:id="@+id/startCalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickCalendar"
        android:text="Button"
        tools:layout_editor_absoluteX="136dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toggleTimer_button" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickDebugReset"
        android:text="Reset"
        tools:layout_editor_absoluteX="136dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/startCalender" />
</android.support.constraint.ConstraintLayout>
